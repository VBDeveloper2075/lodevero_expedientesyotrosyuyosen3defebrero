########### CONFIGURACIÓN LOCAL JP3 ###########
# Copiar este archivo a .env y ajustar valores según corresponda

# Base de datos local
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=jp3_db

# JWT (cambiar por uno seguro de mínimo 32 chars en producción)
JWT_SECRET=dev_super_secret_change_me_1234567890abcd

# URL frontend local (para CORS opcional)
FRONTEND_URL=http://localhost:3000

# Seed inicial de usuarios (solo true una vez si necesitas crear tabla users y usuarios)
INIT_SEED_USERS=false

# Provider (solo informativo)
CLOUD_PROVIDER=local

################################################# Configuración de entorno para JP3

# Configuración de Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=jp3_db
DB_PORT=3306

# Configuración del Servidor
PORT=5000
NODE_ENV=development

# Configuración JWT (para autenticación)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_min_32_chars
JWT_EXPIRES_IN=7d

# Configuración CORS
FRONTEND_URL=http://localhost:3000

# Configuración adicional
API_VERSION=v1

# Variables específicas para Railway deployment
# Railway puede usar DATABASE_URL directamente
DATABASE_URL=mysql://user:password@host:port/database

# Configuración de producción para Railway
# Cambiar estos valores en el dashboard de Railway:
# NODE_ENV=production
# FRONTEND_URL=https://verito-expedientes.netlify.app
# JWT_SECRET=nuevo_secret_super_seguro_para_produccion_min_32_chars

